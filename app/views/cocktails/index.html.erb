<div class="container">
  <h1>Cocktails:</h1>
  <ul class="list-inline">
    <% @cocktails.each do |cocktail|%>
      <li>
        <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        <%= link_to '🗑️', cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= cl_image_tag("#{cocktail.photo}",
            width: 400, height: 300, crop: :fill) %>
      </li>
    <% end %>
  </ul>
  <br>
  <br>
  <%= link_to 'Create a new cocktail', new_cocktail_path, class: 'btn btn-success'%>
</div>








