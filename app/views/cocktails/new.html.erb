<div class="container">
  <h1>Add new Cocktail:</h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <p>Enter a name: <%= f.text_field :name, placeholder: "name" %></p>
    <p> <%= f.input :photo %></p>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit class: "btn btn-primary"%>
  <% end %>
  <%= link_to 'Back to list', cocktails_path, class: 'btn btn-primary mt-2' %>
</div>
