<div class="container">
  <h1>Show</h1>
  <h2>Name: <%= @cocktail.name %></h2>
  <% @cocktail.doses.each do |dose|%>
    <p>Ingredients: <%= dose.ingredient.name %></p>
    <p>Description: <%= dose.description %></p>
  <% end %>
  <%= link_to 'Back to list', cocktails_path %>
</div>


